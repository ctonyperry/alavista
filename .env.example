# Alavista Configuration
# Copy this file to .env and adjust values as needed

# Application Settings
APP_NAME=Alavista
LOG_LEVEL=INFO

# Data Storage
# Path where application data (corpora, indices, etc.) will be stored
DATA_DIR=./data

# Ollama Configuration
# URL of the Ollama service (use http://ollama:11434 when running in Docker)
OLLAMA_HOST=http://localhost:11434

# Default LLM model to use for text generation
OLLAMA_MODEL=llama3.1:8b

# Optional: Override Python log format
# JSON_LOGS=false
